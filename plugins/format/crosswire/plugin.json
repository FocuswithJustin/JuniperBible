{
  "plugin_id": "format.crosswire",
  "version": "0.1.0",
  "kind": "format",
  "description": "CrossWire native SWORD module distribution format (.zip archives with mods.d/ and modules/)",
  "formats": ["crosswire-zip", "sword-distribution"],
  "commands": {
    "detect": {
      "description": "Detect if path is a CrossWire SWORD module distribution",
      "args": {
        "path": "Path to zip file or directory"
      }
    },
    "enumerate": {
      "description": "List all modules in the distribution",
      "args": {
        "path": "Path to zip file or directory"
      }
    },
    "extract-ir": {
      "description": "Extract module to IR format",
      "args": {
        "path": "Path to zip file or directory",
        "module": "Module name to extract (optional)"
      }
    },
    "emit-native": {
      "description": "Emit IR to native CrossWire zip format",
      "args": {
        "ir": "IR document",
        "output_dir": "Output directory"
      }
    },
    "ingest": {
      "description": "Ingest module into capsule format",
      "args": {
        "path": "Path to zip file or directory",
        "output_dir": "Output directory"
      }
    }
  },
  "examples": [
    {
      "description": "Detect CrossWire module",
      "command": "detect",
      "args": {
        "path": "/path/to/module.zip"
      }
    },
    {
      "description": "List modules in distribution",
      "command": "enumerate",
      "args": {
        "path": "/path/to/module.zip"
      }
    },
    {
      "description": "Extract to IR",
      "command": "extract-ir",
      "args": {
        "path": "/path/to/module.zip",
        "module": "KJV"
      }
    }
  ]
}
