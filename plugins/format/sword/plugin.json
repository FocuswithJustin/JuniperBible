{
  "plugin_id": "format.sword",
  "version": "1.0.0",
  "kind": "format",
  "entrypoint": "format-sword",
  "capabilities": {
    "inputs": ["directory"],
    "outputs": ["artifact.kind:sword-module", "artifact.kind:sword-conf", "artifact.kind:sword-data"]
